//- Forms

form

  input[type=email]
  input[type=text]
  textarea
    padding: 8px 10px 11px
    border: $grey-border
    border-radius: 3px
    font-size: 14px
    font-family: $font-family-opensans

    &:focus
      border-color: $teal
      outline: none

    & + .btn
      margin: 0
      margin-left: 8px

  .btn
    font-size: 14px