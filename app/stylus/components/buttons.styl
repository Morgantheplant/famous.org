//UI button styles
button

  $shadow = #00967f
  $foreground = white
  $background = #00b1a6
  $hoverForeground = white
  $hoverBackground = #333333

  $foregroundLight = white
  $backgroundLight = transparent
  $hoverForegroundLight = #00b1a6
  $hoverBackgroundLight = white

  font-family: $font-family-lato-black
  font-size: 75%
  font-weight: 100
  cursor: pointer
  transition(all ease-in-out 300ms)

  &.cta
    margin: 15px 0
    padding: 15px 60px
    border-radius: 5px
    border: 2px solid $background
    font-weight: 100
    text-transform: uppercase
    color: $foreground
    background:$background
    box-shadow: 0px 2px 1px $shadow;

    &:hover
      background: $hoverBackground
      border: 2px solid $hoverBackground
      box-shadow: 0px 2px 1px $hoverBackground;

    &.light
      margin: 10px 0
      padding: 15px 60px
      background:$backgroundLight
      border: 1px solid $foregroundLight
      box-shadow:none

      &:hover
        background:$hoverBackgroundLight
        color: $hoverForegroundLight

    &.small
      background:$background
      border:none
      border-radius: 5px
      padding: 5px 30px
      box-shadow:none

      &:hover
        background:$hoverBackgroundLight
        color:$hoverForegroundLight
