// Main nav

.nav-main

  $logo-size = 50px

  width: 100%
  padding: 25px
  position: absolute
  top: 0
  z-index: 10
  font-weight: $font-weight-bold

  .nav-logo
    display: inline-block
    float: left
    margin-right:30px
    width: $logo-size
    height: $logo-size

  .nav-main-list
    a
      font-family:$font-family-lato-light
      font-size:12px
      font-weight:100
      margin:0 30px
      display: inline-block
      color: white

    .list-left
      float: left
      text-transform: uppercase;
      centerVertical()

      a.download
        margin 0 0 0 10px
        padding-left:20px
        background: url(../images/fpo-icon-sprites.png) 0 0 no-repeat

    .list-right
      float: right
      text-align: right
      centerVertical()

      a
        //margin right instead of left since it's floated right
        margin: 0 0 0 30px
        padding-left:20px

      //TODO: replace this with icon sprite
      .twitter
        background: url(../images/fpo-icon-sprites.png) 0 -18px no-repeat

      .github
        background: url(../images/fpo-icon-sprites.png) 0 -33px no-repeat

      .unknown
        background: url(../images/fpo-icon-sprites.png) 0 -48px no-repeat

    &.home
      margin-left: 0
      float: left

  .reveal-nav-btn
    width: 36px
    height: 30px
    display: none
    {centerVert}
    right: 30px
    border: 2px solid white
    border-radius: 3px
    color: white
    font-size: 14px
    text-transform: uppercase
    cursor: pointer

    // Hamburger mixin
    hamburger(color)
      background: color
      box-shadow: 0 -6px 0 color,
                  0  6px 0 color

    // Hamburger
    &:before
      width: 20px
      height: 2px
      display: block
      {centerBoth}
      content: ''
      hamburger(white)

    &:hover
      background: white

      &:before
        hamburger($grey-drk)

  .reveal-nav-input
    position: absolute
    display: none
    visibility: hidden
  
  .nav-main-list
    //same height as logo for vertical centering
    height: $logo-size
  
  .home
    margin-top: 8px

  @media screen and (max-width: $small-width)

    .nav-main-list
      width: 100%
      display: none
      background: black
      position: absolute
      top: 100%
      left: 0
      margin-top: 0px

      a
        margin-left: 0
        padding: 8px 30px
        display: block
        text-align: left

        &:not(:last-child)
          border-bottom: 1px solid #222

        &:hover
          background: black

    .reveal-nav-btn
    .reveal-nav-input
      display: inline-block

    .reveal-nav-input:checked + .nav-main-list
      display: block