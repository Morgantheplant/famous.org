// Main nav

.nav-main

  $logo-size = 50px

  width: 100%
  padding: 25px
  position: absolute
  top: 0
  z-index: 10
  font-weight: $font-weight-bold

  .nav-logo
    display: inline-block
    float: left
    margin-right:30px
    width: $logo-size
    height: $logo-size

  h1
    font-family:$font-family-lato-light
    font-size:36px
    font-weight:100
    margin:80px 0 0 0
    padding:0
    text-align:left
    color:$copy-light

  .nav-main-list
    a
      font-family:$font-family-lato-regular
      font-size:12px
      font-weight:normal
      margin:0 30px
      display: inline-block
      color: $copy-light

    a.download
      font-family:$font-family-lato-regular
      font-weight: normal
      margin: 0
      padding:12px 20px 12px 45px
      text-transform: uppercase;
      border-radius: 8px
      line-height:12px
      border: 1px solid white
      background: url("../images/download.svg") no-repeat scroll 15px -75px transparent

      &:hover
        opacity:1
        color:$colors-primary
        background: url("../images/download.svg") no-repeat scroll 15px 10px white

    .list-left
      float: left
      text-transform: uppercase;
      centerVertical()

    .list-right
      float: right
      text-align: right
      centerVertical()

    &.home
      margin-left: 0
      float: left

  .reveal-nav-btn
    position:absolute
    width: 36px
    height: 30px
    display: none
    right: 0
    margin:10px 30px 0 0
    border: 2px solid white
    border-radius: 3px
    color: $copy-light
    font-size: 14px
    text-transform: uppercase
    cursor: pointer

    // Hamburger mixin
    hamburger(color)
      background: color
      box-shadow: 0 6px 0 color,
                  0 12px 0 color

    // Hamburger
    &:before
      margin:5px auto 0
      width: 20px
      height: 2px
      display: block
      content: ''
      hamburger(white)

    &:hover
      background: white

      &:before
        hamburger($grey-drk)

  .reveal-nav-input
    position: absolute
    right:0
    margin:30px
    display: none
    visibility: hidden
  
  .nav-main-list
    //same height as logo for vertical centering
    height: $logo-size
  
  .home
    margin-top: 8px

  @media screen and (max-width: $medium-width)

    .nav-main-list
      width: 100%
      visibility:hidden
      opacity:0
      background: black
      position: absolute
      top: 100%
      left: 0
      margin-top: 0px
      transition(all ease-in-out 300ms)

      .list-left
        float:none
        background:black
        top:0
        transform(none)

        a
          margin: 0
          padding-left:30px
          border-bottom: 1px solid #222

      .list-right
        float:none
        background:black
        top:0
        text-align:left
        text-transform: uppercase
        transform(none)

        a
          margin: 0
          padding-left:30px

          &:not(:last-child)
            border-bottom: 1px solid #222

          &:hover
            background: #333

        a.download
          font-family:$font-family-lato-light
          padding:10px 30px
          border:none
          border-radius:0
          background: url("../images/download.svg") no-repeat scroll 10px -75px transparent

          &:hover
            opacity:0.6
            color:white
            background: url("../images/download.svg") no-repeat scroll 10px -75px #333
      a
        margin:0
        padding: 8px 30px
        display: block
        text-align: left

        &:hover
          background: #333

    .reveal-nav-btn
    .reveal-nav-input
      display: inline-block

    .reveal-nav-input:checked + .nav-main-list
      visibility:visible
      opacity:1
