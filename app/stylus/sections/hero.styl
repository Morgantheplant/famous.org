// Hero section

.hero
  min-height: 500px
  height:100%
  padding-top: 100px
  padding-bottom: 20px
  backgroundGradient($colors-background-primary, $colors-background-primary-highlight)

  h1
    font-family:$font-family-lato-hairline
    font-size: 130px
    font-weight:100
    line-height:130px
    color:$colors-foreground-secondary
    text-shadow: 1px 1px 0px rgba(0,0,0,0.2);

  h3
    margin: 30px 120px
    font-family:$font-family-lato-light
    font-size: 36px
    font-weight:100
    line-height:36px
    color:$colors-foreground-secondary

  h4
    margin:0px 0px 5px 0px
    padding:0
    font-family:$font-family-lato-black
    font-size:12px
    line-height:12px
    font-weigth:normal
    text-transform: uppercase;
    color:$colors-foreground-primary

  .container
    max-width:850px
    position:relative
    top:50%
    -webkit-transform: translateY(-50%)
    -moz-transform: translateY(-50%)
    transform: translateY(-50%)
  
    .button-section
      position:relative
      margin:0 auto
      width:550px
      height:100px
      margin-top:40px
      margin-bottom:25px
      text-align:left

      input[type='text']
        position:absolute
        width:270px
        height:80px
        left:0
        padding: 15px 30px
        margin-right:10px
        font-family: Courier, monospace

      button
        position:absolute
        border:1px solid $colors-foreground-primary
        color:$colors-foreground-primary
        width:270px
        height:80px
        margin:0
        right:0

    a.github
      margin:15px
      font-family:$font-family-lato-regular
      font-size:12px
      font-weight:normal
      margin: 0
      padding-left:20px
      display: inline-block
      color:$colors-foreground-secondary
      background: url(../images/github.svg) 0 1px no-repeat

    a.github-forks
      margin:15px
      font-family:$font-family-lato-regular
      font-size:12px
      font-weight:normal
      margin: 0 0 0 30px
      padding-left:20px
      display: inline-block
      color:$colors-foreground-secondary
      background: url(../images/github-forks.svg) 0 1px no-repeat

  @media screen and (max-width: $medium-width)

    h1
      font-size:80px
      line-height:80px
    h3
      font-size: 25px
      line-height:25px

  @media screen and (max-width: $small-width)

    h1
      font-size: 60px
      line-height:60px
    h3
      font-size: 20px
    .date
      font-size: 24px
    .location
      font-size: 16px