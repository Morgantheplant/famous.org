section.content.privacy-policy
  padding:100px 100px 130px 100px
  text-align:left
  background:white
  max-width:1200px
  margin:0 auto
  font:$fonts-regular
  font-size:14px

  hr
    max-width:none
    width:100%
    margin:20px 0
    padding:0

  h3
    font:$fonts-light
    font-size:42px

  p
    strong
      font:$fonts-bold

  .steps
    margin: 100px 0 auto 0

  /**
  *  Resize the headings gradually as we scale the window
  */
  @media screen and (max-width: $max-width)
    padding:10vw
    h3
      font-size: 3vw
      line-height:3vw

  /**
  *  Minimum heading sizes
  */
  @media screen and (max-width: $small-width)
    padding:40px
    h3
      font-size: 18px
      line-height:18px