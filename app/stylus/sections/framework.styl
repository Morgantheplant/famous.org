section.framework
  div
    margin:0 auto
    padding:70px 0 100px
    color:$colors-content-foreground
    max-width:$max-width

    h2
      margin-bottom:50px
      font:$fonts-light
      font-size:36px
      text-align:center

    h3
      margin:30px 0
      font:$fonts-light
      font-size:36px
      text-align:center

    ul
      display:block
      list-style-type:none
      max-width:1100px
      padding:0
      margin:0 50px

      li
        font:$fonts-regular
        font-size:18px
        color:#A5A7AA
        width:35vw
        max-width:400px
        vertical-align:top
        margin:0 4vw 80px
        display:inline-block

        h4
          font:$fonts-regular
          font-size:24px
          color:$colors-content-foreground

        img
          display:block
          margin:50px auto 0

  /**
  *  Medium sizes
  */
  @media screen and (max-width: $medium-width)
    div
      ul
        li
          display:block
          width:auto
          max-width:none

  /**
  *  Small sizes
  */
  @media screen and (max-width: $small-width)
    div
      h2, h3
        font-size:28px

      ul
        margin:0 auto
        li
          margin:0 30px 40px
          h4
            font-size:18px
          p
            font-size:16px